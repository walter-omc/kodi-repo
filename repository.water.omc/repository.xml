<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
	<addon id="plugin.video.filmix.omc" name="Filmix OMC" version="0.0.8" provider-name="Walter OMC">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.xbmcup" version="0.2.1"/>
	</requires>
	<extension point="xbmc.python.pluginsource" provides="video" library="addon.py">
		<provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Filmix OMC</summary>
		<description>
			 Filmix - Вашему вниманию полнометражное кино и телесериалы, мультфильмы, трейлеры.
		</description>
		<platform>all</platform>
