		<forum>http://xbmc.ru/forum/showthread.php?t=11719</forum>
		<email>walomc@yandex.ru</email>
	</extension>
</addon>

<addon id="script.module.xbmcup" name="XbmcUp" version="0.2.1" provider-name="HAL9000">
    <requires>
        <import addon="xbmc.python" version="2.14.0"/>
    </requires>
    <extension library="service.py" point="xbmc.service" start="startup"/>
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
    </extension>
</addon>
</addons>
